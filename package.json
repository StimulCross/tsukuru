{
  "name": "tsukuru",
  "version": "0.8.0",
  "description": "Enables you to build a TypeScript package that's compatible with both CommonJS and ES Modules",
  "keywords": [
    "esm",
    "module",
    "commonjs",
    "typescript",
    "tsc",
    "library",
    "package",
    "hybrid"
  ],
  "main": "lib",
  "types": "lib",
  "bin": "lib/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-fischer/tsukuru.git"
  },
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "funding": "https://github.com/sponsors/d-fischer",
  "license": "MIT",
  "dependencies": {
    "@oclif/config": "^1.18.3",
    "@oclif/core": "^1.20.4",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-help": "^5.1.12",
    "@types/node": "^14.18.13",
    "@types/toposort": "^2.0.3",
    "chalk": "^4.1.0",
    "ora": "^5.1.0",
    "rimraf": "^5.0.5",
    "toposort": "^2.0.2",
    "tslib": "^2.0.3"
  },
  "peerDependencies": {
    "typescript": ">=4.8.2 <5.1"
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^6.0.3",
    "@types/ts-expose-internals": "npm:ts-expose-internals@4.9.4",
    "eslint": "^8.12.0",
    "husky": "^4.3.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.1.2",
    "typescript": "~5.0.4"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "scripts": {
    "lint": "eslint --ext ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "build": "tsc",
    "rebuild": "rimraf lib && yarn run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": "prettier --write",
    "*.{ts}": "eslint --fix"
  }
}
